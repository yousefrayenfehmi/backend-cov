# ================================
# Configuration Docker - Backend Covoiturage
# Copiez ce fichier en .env et remplissez vos valeurs
# Commande: cp env.docker.template .env
# ================================

# ========== Base ==========
NODE_ENV=production
PORT=3000

# ========== MongoDB ==========
MONGO_USERNAME=admin
MONGO_PASSWORD=changez_moi_en_production
MONGODB_URI=mongodb://admin:changez_moi_en_production@mongodb:27017/covoiturage?authSource=admin

# ========== JWT ==========
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi
JWT_EXPIRE=7d

# ========== Email (Optionnel) ==========
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre.email@gmail.com
EMAIL_PASSWORD=votre_mot_de_passe_application

# ========== Cloudinary (Optionnel) ==========
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# ========== Twilio SMS (Optionnel) ==========
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ========== CORS ==========
CORS_ORIGIN=*


